{
  "name": "chat-assistant",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "cpenv": "cp -R .env ./dist/.env",
    "cpschemas": "cp -R ./src/schemas ./dist/schemas",
    "cpfiles": "npm run cpschemas && npm run cpenv",
    "build": "rm -rf ./dist && tsc && npm run cpfiles",
    "start": "node ./dist/app.js",
    "b-s": "npm run build && npm run start",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md,yaml,yml}": "npm run lint:fix"
  },
  "keywords": [],
  "author": "Sviataslau Salamennik <s.salamennik@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "js-yaml": "^4.1.0",
    "openai": "^4.11.1",
    "path": "^0.12.7",
    "sequelize": "^6.33.0",
    "sequelize-cli": "^6.6.1",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/js-yaml": "^4.0.6",
    "@types/node": "^20.8.3",
    "@types/sequelize": "^4.28.16",
    "@types/yup": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "axios-mock-adapter": "^1.22.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
